<!-- as with settings, you can also override the services.xml in local.xml -->
<!-- you can see that this is a neat way to use your own class that replace the default class -->
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- read more about service container on http://symfony.com/doc/current/book/service_container.html -->
    <services>
        <!-- please always, always prepend your plugin name to the service id to avoid conflict -->
        <service id="riSample.Something" class="plugins\riSample\Something2" scope="prototype">
        </service>

    </services>

</container>